{
  "private": true,
  "name": "portfolio",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && sirv build --port 8080 --cors --single",
    "serve2": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "jest ./tests",
    "precommit": "lint-staged",
    "format": "prettier --write \"src/**/**\""
  },
  "lint-staged": {
    "*.{css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@types/react": "^16.9.23",
    "i18n-react": "^0.7.0",
    "idb-keyval": "^3.2.0",
    "preact": "^10.3.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-switch": "^5.0.1",
    "react-use": "^13.27.0",
    "tailwindcss": "^1.2.0",
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.23",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "css-loader": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-cli-tailwind": "^1.0.0",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.19.1",
    "sirv-cli": "^1.0.0-next.3",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
